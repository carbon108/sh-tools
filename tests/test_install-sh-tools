#!/bin/bash

call_tester(){

local tests_dir=$(dirname "$0")
local src_dir=$(dirname "$tests_dir")

local download_dir=$tests_dir/test_install-sh-tools-out-$(date +%s)

printf "\nRunning tests...
Current directory: $PWD\n"


printf "\nTest installer gets resource file...\n\n"

$src_dir/install-sh-tools "0.1.3" "$download_dir"
! [[ -f "$download_dir/sh-tools-rc" ]] &&\
    printf "\nTest fail: File 'sh-tools-rc' Not found\n"

rm -rf "$download_dir"

}

call_tester