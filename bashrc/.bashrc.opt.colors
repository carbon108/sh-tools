RED="\e[31m"
GREEN="\e[32m"
YELLOW="\e[33m"
BLUE="\e[34m"
MAGENTA="\e[35m"
CYAN="\e[36m"
WHITE="\e[97m"

ORANGE="\e[38;5;214m"

LIGHTGREY="\e[37m"
LIGHTGREEN="\e[38;5;82m"
